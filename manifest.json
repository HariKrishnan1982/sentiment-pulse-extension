{
  "manifest_version": 3,
  "name": "Sentiment Pulse",
  "version": "1.0",
  "description": "Analyze sentiment of Quora comments using AI",

  "permissions": ["scripting"],

  "host_permissions": [
    "https://www.quora.com/*",
    "http://127.0.0.1:5000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.quora.com/*"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_title": "Sentiment Pulse"
  }
}
