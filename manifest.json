{
  "manifest_version": 3,
  "name": "AI Comment Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyzes sentiment of comments on social platforms",

  "permissions": ["scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
